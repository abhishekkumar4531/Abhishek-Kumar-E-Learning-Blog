{% extends 'base.html.twig' %}

{% block title %}Reset | Password{% endblock %}

{% block body %}
<div class = "d-flex justify-content-center p-3">
  <div class = "w-75">
    <form action="/reset" method="post">
      <h1>Reset password</h1>
      <dl>
        <dt>Your Name</dt>
        <dd>
          <input type="text" name="userName" id="userName" readonly
          value="{{ userName }}" class = "form-control"
          >
        </dd>
        <dt>Enter OTP</dt>
        <dd>
          <input type="text" name="enterOtp" id="otp" required placeholder="Enter OTP" class = "form-control"
          value="{% if userData.enteredOtp is defined %}{{ userData.enteredOtp }}{% endif %}"
          >
        </dd>
        <dd class="error-msg"></dd>
        <dd class="error-msg">
          {% if invalidOtp is defined %}{{ invalidOtp }}{% endif %}
        </dd>
        <dt>Enter New Password</dt>
        <dd>
          <input type="password" name="newPassword" id="pwd" required class = "form-control"
          onblur="checkPasswordStatus()" placeholder="Enter New Password"
          value="{% if userData.newPassword is defined %}{{ userData.newPassword }}{% endif %}"
          >
        </dd>
        <dd id="pwd_success" class="success-msg"></dd>
        <dd id="pwd_status" class="error-msg"></dd>
        <dt>Confirm Your Password</dt>
        <dd>
          <input type="password" name="cnfPassword" id="cnfPwd" required class = "form-control"
          onblur="confirmPassword()" placeholder="Confirm Password"
          value="{% if userData.cnfPassword is defined %}{{ userData.cnfPassword }}{% endif %}"
          >
        </dd>
        <dd id="cnfPwd_status" class="error-msg"></dd>
        <dd class="error-msg">
          {% if invalidPassword is defined %}{{ invalidPassword }}{% endif %}
        </dd>
        <dd>
          <button name="resetPwd" id="submitBtn" class = "btn btn-primary w-100">
            Change Password
          </button>
        </dd>
      </dl>
    </form>
  </div>
</div>
{% endblock %}
